.container {
  padding: 32rpx;
}
.main-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  text-align: center;
}
.sub-title {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 32rpx;
  text-align: center;
}
.input-card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 16rpx #e0eaff33;
  padding: 32rpx 24rpx 24rpx 24rpx;
  margin-bottom: 32rpx;
}
.input-label {
  font-size: 28rpx;
  color: #222;
  font-weight: 700;
  margin-bottom: 12rpx;
}
.section-card {
  background: #f8fafc;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  padding: 24rpx;
}
.section-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}
.section-content {
  font-size: 28rpx;
  color: #333;
}
